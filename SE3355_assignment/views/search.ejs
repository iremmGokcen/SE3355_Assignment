<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Arama Sonuçları</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <%- include('navbar') %>
    <div class="container mt-4">
        <div class="row">
            
            <div class="col-md-3">
                <h4>Kategoriler</h4>
                <ul class="category-list">
                    <% for (const category in categories) { %>
                        <li>
                            <a href="/category/<%= category %>">
                                <span><%= category %></span>
                                <span class="badge bg-primary"><%= categories[category] %></span>
                            </a>
                        </li>
                    <% } %>
                </ul>
            </div>

            
            <div class="col-md-9">
                <h1 class="mb-4">"<%= keyword %>" için Arama Sonuçları</h1>

                <% if (results.length > 0) { %>
                    <div class="row">
                        <% results.forEach(product => { %>
                            <div class="col-md-4 mb-4 product-card" data-category="<%= product.category %>">
                                <div class="card">
                                    <img src="/images/<%= product.image %>" class="card-img-top" alt="<%= product.description %>">
                                    <div class="card-body">
                                        <h5 class="card-title"><%= product.description %></h5>
                                        <p class="card-text">Fiyat: <%= product.price %> TL</p>
                                        <p class="card-text">Şehir: <%= product.city %></p>
                                        <a href="/product/<%= product.id %>" class="btn btn-primary">Detay</a>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } else { %>
                    <p class="text-muted">Sonuç bulunamadı.</p>
                <% } %>

                
            </div>
        </div>
    </div>
    <script src="/script.js"></script>
</body>
</html>
